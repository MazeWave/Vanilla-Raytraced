{
	"namespace": "start",

	// Menu
	"vanillaraytraced_scroll@common.scrolling_panel":{"$show_background": false,"$scrolling_content": "start.vanillaraytraced_panel"},
	"vanillaraytraced_main@common_dialogs.main_panel_no_buttons":{"size":["90%","90%"], "$text_name":"vanillaRaytraced.name","$child_control":"start.vanillaraytraced_scroll"},
	"vanillaraytraced_panel": {
		"type": "stack_panel",
		"orientation": "vertical",
		"size": ["100%", "100%c + 8px"],
		"offset": [4,4],
		"controls": [
			{
				"panel":{
					"type": "stack_panel",
					"orientation": "horizontal",
					"size": ["100% - 8px", "100%c"],
					"controls": [
						{
							"sidepanel":{
								"type": "stack_panel",
								"size": [128, "fill"],
								"controls": [
									{"icon": {"type": "image","texture": "pack_icon","size": [128,128]}},
									{"gap": {"type": "panel", "size": [6,6]}},
									{"introduction@menu_text": { "text": "vanillaRaytraced.introduction" }},
									{"description@menu_text": { "text": "vanillaRaytraced.description" }}
								]
							}
						},
						{ "gap": {"type": "label", "size": [12, 12] }},
						{
							"content":{
								"type": "stack_panel",
								"size": ["fill","100%c"],
								"controls": [
									{"compatibility@menu_text": { "font_scale_factor": 1.5, "text": "vanillaRaytraced.compatibility" }},
									{"gap_1": {"type": "label"}},
									{"warning@menu_text": { "text": "vanillaRaytraced.warning"} },
									{"gap_2": {"type": "label", "text":"\n\n"}},
									{"QA@menu_text": { "font_scale_factor": 1.8, "color": "$6_color_format", "text": "vanillaRaytraced.QA" }},
									{"Q1@menu_text": { "text": "vanillaRaytraced.Q1" }},
									{"A1@qa_answer": { "text": "vanillaRaytraced.A1" }},
									{"gap_3": { "type": "label"} },
									{"Q2@menu_text": { "type": "label", "max_size": [ "100%" ], "text": "vanillaRaytraced.Q2" }},
									{"A2@qa_answer": { "text": "vanillaRaytraced.A2" }}
								]
							}
						}
					]
				}
			},
			{"mazewave@menu_text": { "font_scale_factor": 2,"text": "\n/§dMaze§5Wave" }},
			{"nothing@menu_text": { "font_scale_factor": 0, "text": "\nYou found me ?\nHehehehe you good\nBtw i don't really know what to write here, oh yeah json sucks to me, this file is litteraly copy/pasted from esbe shader (really cool shader without RTX btw)\nCool music : I kicked a cloud once - Aura / I kicked a cloud once - Saturn pt2 / Gambi - Popopop / Gambi - Macintosh\nAnime I watched : MHA, No game No life, HxH, Snk, Naruto, Naruto Shippuden, Pokemon, Radiant. So yeah im a newbie in this but i kinda like it ¯\\_(ツ)_/¯" }}
		]
	},

	// Presets
	"menu_text":{ "type": "label", "max_size": [ "100%" ] },
	"qa_answer@start.menu_text":{ "font_scale_factor": 0.9, "color": "$7_color_format" },

	// Home menu button
	"main_buttons_panel/stacked_rows":{
		"modifications": [
			{
				"array_name": "controls",
				"operation": "insert_back",
				"value": [
					{ 
						"vanillaraytraced_row@start.stacked_row": {
							"controls": [
								{ 
									"vanillaraytraced_button@start.main_button": {
										"$button_text": "vanillaRaytraced.name",
										"$pressed_button_name": "button.menu_buy_game"
									} 
								}
							]
						}
					}
				]
		  	}
		]
	}
}
